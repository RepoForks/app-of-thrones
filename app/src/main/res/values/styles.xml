<resources>

    <!-- default styles, used automatically -->
    <style name="DefaultTextView" parent="android:Widget.TextView">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- custom styles, used explicitly -->
    <style name="MyTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">4dp</item>
    </style>

    <!-- TextAppearance -->
    <style name="TextAppearance.Display1" parent="TextAppearance.AppCompat.Display1">
    </style>

    <style name="TextAppearance.Display1.CondensedBold">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
    </style>

    <style name="TextAppearance.Title.Condensed">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextAppearance.Headline" parent="TextAppearance.AppCompat.Headline">
    </style>

    <style name="TextAppearance.Headline.CondensedBold">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Subhead" parent="TextAppearance.AppCompat.Subhead">
    </style>

    <style name="TextAppearance.Subhead.Smallcaps">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.AppCompat.Body1">
    </style>

</resources>
